<Window x:Class="AmiKoWindows.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:local="clr-namespace:AmiKoWindows"
        mc:Ignorable="d"
        ResizeMode="NoResize" WindowStyle="None" BorderThickness="1" Topmost="True"
        WindowStartupLocation="CenterScreen"
        RenderOptions.ClearTypeHint="Enabled"
        Title="SplashScreen" Height="384" Width="512">
    <Grid>
        <DockPanel>
            <Image Stretch="UniformToFill" DockPanel.Dock="Top" Source="/Resources/img/desitin_splash.png" />
            <TextBlock DockPanel.Dock="Bottom" HorizontalAlignment="Center">Loading... please wait.</TextBlock>
        </DockPanel>
    </Grid>
</Window>
